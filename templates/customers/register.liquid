<div class="container py-5 my-5">
    <div class="login-form">
        {% form 'create_customer' %}
            {% include 'form-error', form: form %}
            <h1 class="h3">Đăng ký</h1>
            
            <label for="firtName">Tên</label>
            <input type="text" name="customer[first_name]" class="form-control rounded-0 my-2">

            <label for="lastName">Họ</label>
            <input type="text" name="customer[last_name]" class="form-control rounded-0 my-2">

            <label for="emailAddress">Email</label>
            <input type="email" name="customer[email]" class="form-control rounded-0 my-2">

            <label for="password">Mật khẩu</label>
            <input type="password" name="customer[password]" class="form-control rounded-0 my-2">

            <input type="submit" value="Đăng ký" class="btn btn-primary btn-lg w-100 rounded-0">
        {% endform %}
    </div>
</div>

