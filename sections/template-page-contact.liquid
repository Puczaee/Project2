<div class="container py-5">
    <div class="row">
      <div class="col-12">
        <h1>Liên hệ với chúng tôi</h1>
      </div>
    </div>
  
    <div class="row">
      {% form 'contact' %}
        {% if form.posted_successfully? %}
          <div class="alert alert-success">
            Cảm ơn đã liên hệ với chúng tôi
          </div>
        {% endif %}
  
        {{ form.errors | default_errors }}
  
        <div class="row">
          <div class="col-12 col-md-6">
            <label for="ContactFormName">Tên</label>
            <input class="form-control" type="text" id="ContactFormName" name="contact[name]">
          </div>
          <div class="col-12 col-md-6">
            <label for="ContactFormEmail">Email</label>
            <input class="form-control" type="email" id="ContactFormEmail" name="contact[email]">
          </div>
        </div>
  
        <div class="col-12">
          <label for="ContactOrderNumber">Đơn hàng #</label>
          <input type="text" name="contact[order_number]" id="ContactFormOrderNumber" class="form-control">
        </div>
  
        <div class="col-12">
          <label for="ContactFormPhone">Số điện thoại</label>
          <input class="form-control" type="tel" id="ContactFormPhone" name="contact[phone]">
        </div>
  
        <div class="col-12">
          <label for="ContactFormMessage">Tin nhắn</label>
          <textarea class="form-control" rows="10" id="ContactFormMessage" name="contact[body]"></textarea>
        </div>
        
        
        
        
        
        <input class="btn btn-success w-100 mt-2" type="submit" value="send">
      {% endform %}
    </div>
  </div>
  
  
  
  