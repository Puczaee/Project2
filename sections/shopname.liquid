<section
  class="inner-hero-section"
  style="    text-align: center;"
>
  {% if section.settings.image != blank %}
    <img src="{{ section.settings.image | img_url}}" alt="">
  {% else %}
    {% capture current %}{% cycle 1,2 %}{% endcapture %}
    {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
  {% endif %}
  <div class="container py-2 ">
    <div class="row">
      <div class="col-lg-2 col-md-2 mx-auto">
        <h1>{{ section.settings.title }}</h1>
        {{ section.settings.description }}
        <a href="{{ section.settings.button_link }}" class="btn btn-secondary">{{ section.settings.button_label }} </a>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Shop",
  "class": "shop-section",
  "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Heading Background Title"

        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading Title",
          "default": "Example Heading"
        },
        {
          "type": "richtext",
          "id": "description",
          "default": "<p>Example Paragraph</p>",
            "label": "Heading Description"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Button",
          "label": "Heading Button Label"
          },
        {
          "type": "url",
          "id": "button_link",
          "label": "Heading Button link"
        }
  ],
  "presets":[{
    "category": "shopname",
    "name":"Shopname"
  }
  ]
}
{% endschema %}
